<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.BusquedaHashController"
      spacing="12">

    <padding>
        <Insets top="16" right="16" bottom="16" left="16"/>
    </padding>

    <Label text="Búsqueda por Función Hash" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <!-- Configuración -->
    <HBox spacing="10">
        <Label text="Tamaño tabla (N):"/>
        <TextField fx:id="nField" promptText="Ej: 10 ó 100" prefWidth="90"/>

        <Label text="Dígitos:"/>
        <ChoiceBox fx:id="digitosChoice" prefWidth="70"/>
        
        <Label text="MOD:"/>
        <TextField fx:id="modField" promptText="Ej: 100" prefWidth="80"/>

        <Label text="Función:"/>
        <ChoiceBox fx:id="hashChoice" prefWidth="170"/>

        <Label text="Colisión:"/>
        <ChoiceBox fx:id="colisionChoice" prefWidth="170"/>

        <CheckBox fx:id="resolverCheck" text="Resolver inmediatamente" selected="true"/>

        <Button text="Crear" onAction="#crearEstructura"/>
        <Button text="Arreglar Colisiones" onAction="#arreglarColisiones"/>
    </HBox>

    <!-- Tabla -->
    <TableView fx:id="tabla" prefHeight="260">
        <columns>
            <TableColumn fx:id="colPos" text="Posición" prefWidth="90"/>
            <TableColumn fx:id="colClave" text="Clave" prefWidth="140"/>
            <TableColumn fx:id="colColisiones" text="Colisiones" prefWidth="330"/>
        </columns>
    </TableView>

    <!-- Insertar -->
    <HBox spacing="10">
        <Label text="Insertar clave:"/>
        <TextField fx:id="claveInsertField" promptText="Ej: 4 (autocompleta)" prefWidth="120"/>
        <Button text="Insertar" onAction="#insertarClave"/>
    </HBox>

    <!-- Buscar -->
    <HBox spacing="10">
        <Label text="Buscar clave:"/>
        <TextField fx:id="claveBuscarField" promptText="Ej: 43 o 043" prefWidth="120"/>
        <Button text="Buscar" onAction="#buscarClave"/>
    </HBox>

    <Label fx:id="resultadoLabel" text="Listo." style="-fx-font-size: 14px;"/>

</VBox>