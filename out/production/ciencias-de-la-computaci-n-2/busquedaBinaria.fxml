<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="bBinarioPane" spacing="12" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.BusquedaBinariaController">

    <padding>
        <Insets bottom="16" left="16" right="16" top="16" />
    </padding>

    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Búsqueda Binaria" />

    <HBox spacing="10">
        <Label text="Tamaño estructura (N):" />
        <TextField fx:id="nField" prefWidth="100" promptText="Ej: 10" />

        <Label text="Dígitos clave:" />
        <ChoiceBox fx:id="digitosChoice" prefWidth="80" />

        <Button onAction="#crearEstructura" text="Crear" />
    </HBox>

    <TableView fx:id="tabla" prefHeight="260">
        <columns>
            <TableColumn fx:id="colPos" prefWidth="120" text="Posición" />
            <TableColumn fx:id="colClave" prefWidth="200" text="Clave" />
        </columns>
    </TableView>

    <HBox spacing="10">
        <Label text="Insertar clave:" />
        <TextField fx:id="claveInsertField" prefWidth="120" promptText="Ej: 4 (autocompleta)" />
        <Button onAction="#insertarClaveOrdenada" text="Insertar" />
    </HBox>

    <HBox spacing="10">
        <Label text="Buscar clave:" />
        <TextField fx:id="claveBuscarField" prefWidth="120" promptText="Ej: 43 o 043" />
        <Button onAction="#buscarClaveBinaria" text="Buscar" />
    </HBox>
   <HBox prefHeight="4.0" prefWidth="526.0" spacing="400.0">
      <children>
         <Label fx:id="resultadoLabel1" style="-fx-font-size: 14px;" text="Listo." />
         <Button fx:id="btnAnterior" mnemonicParsing="false" onMouseClicked="#openInternas" text="anterior" />
      </children>
   </HBox>

</VBox>
